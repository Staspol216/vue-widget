{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
              "./src/*"
            ]
          },
        "skipLibCheck": true,
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
}